<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dismissable_fram"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#77000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="8dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wan.hollout.ui.widgets.HolloutTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="@string/may_we_know_you_please"
                android:textColor="@color/medium_grey"
                android:textSize="16sp"
                app:textStyle="medium" />

            <Button
                android:id="@+id/button_login_facebook"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/glyph_facebook"
                android:drawableStart="@drawable/glyph_facebook"
                android:gravity="center"
                android:text="@string/btn_text_login_fb"
                android:theme="@style/Widget.Button.Login.Facebook" />

            <Button
                android:id="@+id/button_login_google"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/glyph_google"
                android:drawableStart="@drawable/glyph_google"
                android:gravity="center"
                android:text="@string/btn_text_login_google"
                android:theme="@style/Widget.Button.Login.Google" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:background="@color/ease_gray" />

            <com.wan.hollout.ui.widgets.HolloutTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="12dp"
                android:text="@string/we_would_never_post_on_your_time_line"
                android:textColor="@color/grey500"
                app:textStyle="regular" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
