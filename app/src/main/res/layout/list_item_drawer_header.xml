<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/signed_in_user_cover_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9b000000" />

    <LinearLayout
        android:id="@+id/navigation_drawer_list_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <com.wan.hollout.ui.widgets.CircleImageView
            android:id="@+id/signed_in_user_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/signed_in_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_vertical_half"
            android:fontFamily="sans-serif-light"
            android:text="@string/not_logged_in"
            android:textColor="@color/textIconColorPrimary"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>