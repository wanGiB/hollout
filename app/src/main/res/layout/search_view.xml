<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/search_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/searchTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@null"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:paddingLeft="@dimen/search_view_text_padding"
                android:paddingRight="@dimen/search_view_text_padding"
                android:textColor="#212121"
                android:textColorHint="#727272"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/action_up_btn"
                style="@style/MSV_ImageButton_Alt"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_action_navigation_arrow_back" />

            <ImageButton
                android:id="@+id/action_voice_btn"
                style="@style/MSV_ImageButton_Alt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_action_voice_search" />

            <ProgressBar
                android:id="@+id/action_progress_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginEnd="@dimen/search_icon_padding"
                android:layout_marginRight="@dimen/search_icon_padding"
                android:contentDescription="@null"
                android:src="@drawable/ic_action_voice_search" />

            <ImageButton
                android:id="@+id/action_empty_btn"
                style="@style/MSV_ImageButton_Alt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_action_navigation_close"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentBottom="true"
                android:background="#10000000" />

        </RelativeLayout>


        <ListView
            android:id="@+id/suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:divider="@android:color/transparent" />

    </LinearLayout>

</FrameLayout>