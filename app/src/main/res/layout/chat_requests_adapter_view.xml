<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.wan.hollout.ui.widgets.HolloutTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:gravity="start"
        android:padding="10dp"
        android:text="@string/requests"
        android:textColor="@color/ease_gray"
        android:textSize="13sp"
        app:textStyle="medium" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0.5dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/clickable_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <com.wan.hollout.ui.widgets.CircleImageView
                    android:id="@+id/third_requester"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/ease_default_image"
                    app:border_color="@color/whitesmoke"
                    app:border_width="1dp" />

                <com.wan.hollout.ui.widgets.CircleImageView
                    android:id="@+id/second_requester"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ease_default_image"
                    app:border_color="@color/whitesmoke"
                    app:border_width="1dp" />

                <com.wan.hollout.ui.widgets.CircleImageView
                    android:id="@+id/first_requester"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ease_default_image"
                    app:border_color="@color/whitesmoke"
                    app:border_width="1dp" />

            </FrameLayout>

            <com.wan.hollout.ui.widgets.HolloutTextView
                android:id="@+id/requests_count_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                app:textStyle="medium" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_chevron_right_black_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.wan.hollout.ui.widgets.HolloutTextView
        android:id="@+id/nearby_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:gravity="start"
        android:padding="10dp"
        android:text="@string/nearby"
        android:textColor="@color/ease_gray"
        android:textSize="13sp"
        android:visibility="gone"
        app:textStyle="medium" />

</LinearLayout>
